<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Corsair_Effects_Engine.Controls.RgbSliders" 
             mc:Ignorable="d" Height="77" Width="152">
    <Grid>
        <xctk:RangeSlider x:Name="RangeSliderR" VerticalAlignment="Top" HigherValueChanged="RangeSliderR_HigherValueChanged" LowerValueChanged="RangeSliderR_LowerValueChanged" Maximum="255" Margin="0,0,2,0"/>
        <xctk:RangeSlider x:Name="RangeSliderG" Margin="0,0,2,28" VerticalAlignment="Bottom" LowerValueChanged="RangeSliderG_LowerValueChanged" HigherValueChanged="RangeSliderG_HigherValueChanged" Maximum="255"/>
        <xctk:RangeSlider x:Name="RangeSliderB" Margin="0,54,2,0" VerticalAlignment="Top" HigherValueChanged="RangeSliderB_HigherValueChanged" LowerValueChanged="RangeSliderB_LowerValueChanged" Maximum="255"/>
    </Grid>
</UserControl>
